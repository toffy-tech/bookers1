<% if @book.errors.any? %>
  <h5>error!</h5>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<h1>Editing Book</h1>
<!-- form_with部分 -->

<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <div class="update">
    <%= f.submit 'Update Book' %>
  </div>
<% end %>

 
<%= link_to "Show", book_path(@book) %>
