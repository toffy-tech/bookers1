<% if @book.errors.any? %>
  <h5>error!</h5>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |message| %>
    <%= message %>
  <% end %>
<% end %>
<h1>Books</h1>

<table>
    <thead>
        <tr>
          <th>Title</th>
          <th>Body</th>
          <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to 'Show', book_path(book) %></td>
            <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
            <td><%= link_to 'Destroy', destroy_books_path(book), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
    </tbody>
</table>

<%= form_with model:@book, local:true do |f| %>
    <h2>New book</h2>
    <div class="field">
        <%= f.label :Title %><br>
        <%= f.text_field :title %>
    </div>
    <div class="field">
        <%= f.label :Body %><br>
        <%= f.text_field :body %>
    </div>
    
    <div class="actions">
        <%= f.submit "Create Book" %>
    </div>
<% end %>
  
